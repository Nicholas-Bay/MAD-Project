<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">
    
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iphone_mostviewed"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/iphone"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/iphone_mostviewed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone 13 Pro Max"
            android:layout_toRightOf="@+id/iphone_mostviewed"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/baloo_paaji"/>
        <RatingBar
            android:id="@+id/iphone_mostviewed_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@+id/iphone_mostviewed_title"
            android:layout_toRightOf="@id/iphone_mostviewed"
            android:layout_marginLeft="10dp"
            android:rating="4"/>
        <TextView
            android:id="@+id/iphone_mostviewed_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Iphone of the Year Award"
            android:layout_below="@id/iphone_mostviewed_rating"
            android:layout_toRightOf="@id/iphone_mostviewed"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>