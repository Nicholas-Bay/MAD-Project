<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mad_project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Child of theme mad -->
    <style name="Theme.Mad_project.seller_me_btn" parent="Theme.Mad_project">
        <item name="backgroundColor">#000000</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--theme for seller_add-->
    <style name="SellerAdd" parent="Theme.Mad_project">
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:popupBackground">@color/black</item>
    </style>
    <style name="SellerAdd.TextBox" parent="Theme.Mad_project">
        <item name="android:foreground">@drawable/textbox_darkmode</item>
    </style>

</resources>